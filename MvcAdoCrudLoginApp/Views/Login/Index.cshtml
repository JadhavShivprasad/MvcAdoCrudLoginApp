@model MvcAdoCrudLoginApp.RouteConfig

@{
    ViewBag.Title = "Login";
    Layout = null; // No layout
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .form-title {
            margin-bottom: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="form-title">Login</h2>

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Enter username", autofocus = "autofocus" })
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                @Html.Password("password", null, new { @class = "form-control", placeholder = "Enter password" })
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Message as string))
        {
            <div class="mt-3 alert alert-danger text-center">
                @ViewBag.Message
            </div>
        }
    </div>
</body>
</html>
